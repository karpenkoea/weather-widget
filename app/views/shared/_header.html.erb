<% provide :header do %>
  <header class="container mt-3">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-lg py-3">
      <!-- Container wrapper -->
      <div class="container-fluid">
        <%= link_to "Weather Widget", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <div class="mx-auto">
            <form class="d-flex mt-4 mt-sm-4 mt-md-4 mt-lg-0 mt-xl-0">
              <input class="form-control me-2" type="search" placeholder="Search the city" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= nav_tab "Home", root_path, class: "nav-link", current_page: current_page %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Features</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Help</a>
            </li>
          </ul>
        </div>
      </div>
      <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->
  </header>
<% end %>
